!! Appearance----------------------------------------------------------------------

!! Scrolling
URxvt.scrollBar:        false

!! Nerd font
URxvt.font:             xft:Inconsolata\ Nerd\ Font\ Mono:style=Medium:size=12

!! Cursor
URxvt.cursorBlink:      true

!! Terminal padding
URxvt.internalBorder:   15

!! Opacity --- load new changes by executing: xrdb -load ~/.Xdefaults
URxvt.transparent:      true
URxvt.shading:          7

!! Mouse
URxvt.pointerBlank:     true

!!---------------------------------------------------------------------------------



!!Keybinds-------------------------------------------------------------------------

!!Copy and pasting -- Disabled ctrl-shift binding
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-Meta-c:  builtin-string:
URxvt.keysym.Control-Meta-v:  builtin-string:
URxvt.iso14755:               false
URxvt.iso14755_52:            false

!!---------------------------------------------------------------------------------



!! Colorscheme---------------------------------------------------------------------

! Main colour scheme
! special
*.foreground: #93a1a1
*.background: #141c21
*.cursorColor: #c678dd

! Hidden file & executable file colour
*.color2: #5fd700
*.color10: #e5c07b

! Directory colour
*.color4: #00afd7
*.color12: #00afd7

! Tmux bar background colour
*.color0: #263640
*.color8: #4a697d

!!---------------------------------------------------------------------------------

